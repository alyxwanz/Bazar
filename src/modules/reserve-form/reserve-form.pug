mixin reverse(rowName1, rowName2, url1, url2)
  .reserve-form__wrap
    .reserve-form__item.color-bg_white
      .reserve-form__img
      img.reserve-form__icon(src=url1 alt=rowName1 srcset='')
      input.reserve-form__input(type='text' placeholder=rowName1)
    .reserve-form__item.color-bg_white
      .reserve-form__img
      img.reserve-form__icon(src=url2 alt=rowName2 srcset='')
      input.reserve-form__input(type='text' placeholder=rowName2)

section.reserve-form
  .reserve-form__cube
    img(src="./images/index-form/res1.jpg" alt='reserve' srcset='')
  .wrapper
    h2.reserve-form__title.playfair-normal.fz35.color_white.text-decor-dark
      | Reserve your table
    form(action='').reserve-form__form
      +reverse('Name*', 'Email address*','./images/reserve-form/name.png','./images/reserve-form/email.png')
      +reverse('Time*', 'Date*','./images/reserve-form/time.png','./images/reserve-form/date.png')
      +reverse('Guests*', 'Phone*','./images/reserve-form/guest.png','./images/reserve-form/phone.png')
      .reserve-form__wrap
        input.reserve-form__btn.btn.sintony-bold.fz14(type='button' value='Make reservation')
        .reserve-form__disc
          .reserve-form__text.sintony-bold.fz14.color_white.text-decor-dark You can also call
          .reserve-form__text.sintony-bold.fz14.color_pink.text-decor-dark for a reservation
        a.reserve-form__phone.phone.fz22(href='tel:1-007-000-005') 1-007 000 005
  .reserve-form__cube
    img(src="./images/index-form/res2.jpg" alt='reserve' srcset='')



