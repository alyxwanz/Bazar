mixin menu-item(headline, disc, value)
  li.menu__template-item
    .menu__template-text
      span.menu__template-headline.color_dark.sintony-bold.fz16= headline
      span.menu__template-disc.color_lighter-gray.fz14.sintony-normal= disc
    .menu__template-price
      span.menu__template-currency.fz13.playfair-bold.color_dark $
      span.menu__template-value.fz26.playfair-bold.color_dark= value

mixin header-menu()
  ul.header__nav-list
    li.header__nav-item
      a.header__nav-link.sintony-bold.fz14.home-page.color_white(href='./index.html') home
    li.header__nav-item
      a.header__nav-link.sintony-bold.fz14.color_white.menu-page(href='./menu.html') menu
    li.header__nav-item
      a.header__nav-link.sintony-bold.fz14.reservation-page.color_white(href='./reservation.html') reservation
    li.header__nav-item
      a.header__nav-link.sintony-bold.fz14.recipe-2-column-page.color_white(href='./recipe-2-column.html') recipe
    li.header__nav-item
      a.header__nav-link.sintony-bold.fz14.blog-page.color_white(href='./blog.html') blog
    li.header__nav-item
      .header__nav-link-container
        span.header__nav-link-container-drop.sintony-bold.fz14.pages-page.color_white pages
          .header__container-links
            a.header__container-link.sintony-bold.fz14.pages-page.color_white(href='./chef.html') chef
            a.header__container-link.sintony-bold.fz14.pages-page.color_white(href='./event.html') event
    li.header__nav-item
      a.header__nav-link.sintony-bold.fz14.contact-page.color_white(href='./contact.html') contact

