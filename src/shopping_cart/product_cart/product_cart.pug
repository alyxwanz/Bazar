section.product-cart
    .product-cart__wrapper
        h2.product-cart__title.playfair-bold.fz35 Product Cart
        .product-cart__table
            table(style='width: 100%', border='1')
                thead.playfair-bold.fz22
                    tr
                        th Item
                        th 
                        th Price
                        th Qty
                        th Subtotal


                tbody.playfair-bold.fz15
                    tr
                        td 
                            img.shopping-cart__image(src='./images/shopping-cart/image.png' alt='image' srcset='')
                        td Green Mung Beas
                        td $ 100
                        td 1
                        td $ 100

                    tr
                        td 
                            img.shopping-cart__image(src='./images/shopping-cart/image.png' alt='image' srcset='') 
                        td Laird Green Ientils
                        td $ 100
                        td 1
                        td $ 100
                    tr
                        td 
                            img.shopping-cart__image(src='./images/shopping-cart/image.png' alt='image' srcset='')
                        td Fava Bean
                        td $ 100
                        td 1
                        td $ 100
            ul.product-cart__summary.color-bg_pink.color_white
                li.head.playfair-bold.fz22 Summary
